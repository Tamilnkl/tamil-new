<h1>Listing articles</h1>
 
<table>
  <tr>
    <th>Title</th>
    <th>Text Area</th>
     <th>Price</th>
  </tr>
 
  <% @product.each do |article| %>
    <tr>
      <td><%= article.title %></td>
    
      <td><%= article.text_area %></td>
    
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article %></td>
      <td><%= link_to 'Edit', edit_product_path(article) %></td>
      <td><%= link_to 'Destroy', article, confirm: 'Are you sure?', method: :delete %></td>
    </tr>
  <% end %>
</table>
<%= link_to 'New login', new_product_path%>


<style>
td, th {
    padding: 5px;
}
</style>