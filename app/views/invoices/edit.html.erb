<h1>Editing Invoive</h1>

<%= form_for(@invoice) do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :phone %><br>
    <%= f.text_field :phone %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>

